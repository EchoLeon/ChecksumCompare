<Window x:Class="ChecksumCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checksum Compare" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- TextBoxes -->
            <RowDefinition Height="Auto" /> <!-- Buttons -->
            <RowDefinition Height="Auto" /> <!-- Emoji! -->
        </Grid.RowDefinitions>

        <!-- Left TextBox -->
        <TextBox x:Name="LeftTextBox" Grid.Column="0" Grid.Row="0" Margin="20" Height="25" FontSize="12.0"
                 AllowDrop="True"
                 DragEnter="TextBox_OnDragEnter"
                 PreviewDragOver="TextBox_OnPreviewDragOver"
                 PreviewDragLeave="TextBox_OnPreviewDragLeave"
                 Drop="TextBox_OnDrop"
                 TextChanged="TextBox_TextChanged"/>
        <!-- Right TextBox -->
        <TextBox x:Name="RightTextBox" Grid.Column="1" Grid.Row="0" Margin="20" Height="25" FontSize="12.0"
                 AllowDrop="True"
                 DragEnter="TextBox_OnDragEnter"
                 PreviewDragOver="TextBox_OnPreviewDragOver"
                 PreviewDragLeave="TextBox_OnPreviewDragLeave"
                 Drop="TextBox_OnDrop"
                 TextChanged="TextBox_TextChanged"/>

        <!-- Left Button -->
        <Button Grid.Column="0" Grid.Row="1" Content="Select" Margin="20" Height="30" Width="75"
                Click="LeftButton_Click" />
        <!-- Right Button -->
        <Button Grid.Column="1" Grid.Row="1" Content="Select" Margin="20" Height="30" Width="75"
                Click="RightButton_Click" />

        <!-- Emoji Label in the center -->
        <Label x:Name="EmojiLabel" Grid.ColumnSpan="2" Grid.Row="2"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Segoe UI Emoji" FontSize="24" Content="😺" />
    </Grid>
</Window>